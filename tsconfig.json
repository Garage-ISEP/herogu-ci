{
	"compilerOptions": {
		"module": "CommonJS",
		"sourceMap": true,
		"outDir": "bin",
		"noImplicitAny": true,
		"allowJs": false,
		"moduleResolution": "Node",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*"
			]
		},
		"target": "ES2019",
		"experimentalDecorators": true
	},
	"include": [
		"src"
	]
}